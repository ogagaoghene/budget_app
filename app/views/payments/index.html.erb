<section>
  <h2 class="centralize">Payments</h2>
  <span class="centralize"><hr /></span>
  <div class="text-secondary text-center">Category - <%= @category.name %></div>
  <p>Total price: $<%= @category.total_price %></p>
  <% unless @payments.empty? %>
    <%= render 'list' %>
  <% else %>
    <p>No payments available</p>
  <% end %>
  <%= link_to 'Add payment', new_payment_path, class: 'btn bg-sec w-100 text-light' %>
</section>